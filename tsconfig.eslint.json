{
	"extends": ["./tsconfig.json"],
	"compilerOptions": {
		"target": "ES2022",
		"module": "CommonJS",
		"moduleResolution": "Node",
		"esModuleInterop": true,
		"allowSyntheticDefaultImports": true,
		"resolveJsonModule": true,
		"sourceMap": true,
		"strictNullChecks": true,
		"strict": true,
	},
	"include": ["**/*.ts"],
	"exclude": [
		"eslint.config.mjs", 
        "dist/**/*", 
        "node_modules/**/*"
	]
}
